<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/settings_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle"
        >

        <TextView
            android:id="@+id/setting_default_settings"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/default_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/default_settings"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/setting_flat_trim"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/flat_trim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/flattrim"
            android:drawablePadding="5dp"/>


        </LinearLayout>

</LinearLayout>
